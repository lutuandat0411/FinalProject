<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="~/AreasContent/Print/Logo_QT_PNG.png">
	<link rel="icon" type="image/png" sizes="96x96" href="~/AreasContent/Print/Logo_QT_PNG.png">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>Điện Máy Quyết Tiến</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
	<link rel="stylesheet" type="text/css" href="~/AreasContent/Layout/datatables.min.css"/>
    <link href="~/AreasContent/Layout/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/AreasContent/Layout/css/animate.min.css" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
    <link href="~/AreasContent/Layout/css/paper-dashboard.css" rel="stylesheet"/>

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/AreasContent/Layout/css/demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/AreasContent/Layout/css/themify-icons.css" rel="stylesheet">

	

</head>
<body>

<div class="wrapper">
	<div class="sidebar" data-background-color="white" data-active-color="danger">

    <!--
		Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
		Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
	-->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <img src="~/AreasContent/Print/2rsz_logo_qt_png.png">
            </div>
            <ul class="nav">
                <li>
                    <a href="/Admin/ProductAdmin">
                        <i class="ti-shopping-cart"></i>
                        <p>Manage Product</p>
                    </a>
                </li>
				<li class="active">
					<a href="/Admin/CashBill">
                        <i class="ti-shopping-cart-full"></i>
                        <p>Manage Cash Bill</p>
                    </a>
				</li>
				<li>
					<a href="/Admin/InstallmentBill">
                        <i class="ti-shopping-cart-full"></i>
                        <p>Manage Install Bill</p>
                    </a>
				</li>
            </ul>
    	</div>
    </div>

    <div class="main-panel">
		<nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (Session["UserName"] != null)
							{
								<p style="padding-top: 25px;">
								Welcome @Session["UserName"].ToString()  | <a class="nav-link" href="/Admin/ProductAdmin/Logout">
								Logout
								</a>
								</p>
							}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
		 @RenderBody()
            <div class="container-fluid">
                <div class="row">

                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                </nav>
				<div class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script>, made by <i class="fa fa-heart heart"></i> by <a href="#">Team 02</a>
                </div>
            </div>
        </footer>

    </div>
</div>




    <!--   Core JS Files   -->
    <script src="~/AreasContent/Layout/js/jquery.min.js" type="text/javascript"></script>
	<script src="~/AreasContent/Layout/js/bootstrap.min.js" type="text/javascript"></script>

	<!--  Checkbox, Radio & Switch Plugins -->
	<script src="~/AreasContent/Layout/js/bootstrap-checkbox-radio.js"></script>

	
    <!--  Notifications Plugin    -->
    <script src="~/AreasContent/Layout/js/bootstrap-notify.js"></script>

    <!-- Paper Dashboard Core javascript and methods for Demo purpose -->
	<script src="~/AreasContent/Layout/js/paper-dashboard.js"></script>

	<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
	<script src="~/AreasContent/Layout/js/demo.js"></script>

	@RenderSection("scripts", required: false)
	</body>
</html>
