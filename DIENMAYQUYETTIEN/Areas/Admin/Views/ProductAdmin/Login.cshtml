@model DIENMAYQUYETTIEN.Models.Account
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "ProductAdmin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Đăng Nhập</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--===============================================================================================-->
        <link rel="icon" type="image/png" href="~/Image/favicon.ico" />
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/bootstrap/css/bootstrap.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/animate/animate.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/css-hamburgers/hamburgers.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/animsition/css/animsition.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/select2/select2.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/vendor/daterangepicker/daterangepicker.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/AreasContent/css/util.css">
        <link rel="stylesheet" type="text/css" href="~/AreasContent/css/main.css">
        <!--===============================================================================================-->
    </head>
    <body>
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    <form class="login100-form validate-form flex-sb flex-w">
                        <span class="login100-form-title p-b-32">
                           <img src="~/Image/Logo_QT.jpg " width="65" height="65"/>
						   <span>QUYẾT TIẾN</span>
                        </span>

                        <span class="txt1 p-b-11">
                            Username
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                            @Html.TextBoxFor(a => a.Username, new { @class = "input100" })
                            @Html.ValidationMessageFor(a => a.Username)
                            <span class="focus-input100"></span>
                        </div>

                        <span class="txt1 p-b-11">
                            Password
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                            <span class="btn-show-pass">
                                <i class="fa fa-eye"></i>
                            </span>
                            @Html.PasswordFor(a => a.Password, new { @class = "input100" })
                            @Html.ValidationMessageFor(a => a.Password)
                            <span class="focus-input100"></span>
                        </div>
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div id="dropDownSelect1"></div>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/jquery/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/animsition/js/animsition.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/bootstrap/js/popper.js"></script>
        <script src="~/AreasContent/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/select2/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/daterangepicker/moment.min.js"></script>
        <script src="~/AreasContent/vendor/daterangepicker/daterangepicker.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/vendor/countdowntime/countdowntime.js"></script>
        <!--===============================================================================================-->
        <script src="~/AreasContent/js/main.js"></script>
    </body>
</html>
}  