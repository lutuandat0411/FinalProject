@model IEnumerable<DIENMAYQUYETTIEN.Models.InstallmentBill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout4.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/AreasContent/dataTables.min.css" />

<h2 style="text-align:center; padding-bottom: 15px;">Danh sách Hóa Đơn Trả Góp</h2>
<hr />

    <table class="table table-bordered table-striped table-hover" id="myTable" width="100%">
		<thead>
                <tr>
                     <th>Bill Code</th>
                     <th>Customer Name</th>
                     <th>Date</th>
                     <th>Shipper</th>
                     <th>Note</th>
					 <th>Method</th>
                     <th>Period</th>
                     <th>Grand Total</th>
					 <th>Taken</th>
					 <th>Remain</th>
                     <th>Action</th>
                  </tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.BillCode)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Customer.CustomerCode)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Date)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Shipper)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Note)
					</td>
					 <td>
						@Html.DisplayFor(modelItem => item.Method)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Period)
					</td>
					<td>
                        @String.Format("{0:0,0}", item.GrandTotal) VNĐ
					</td>
					<th>
						  @String.Format("{0:0,0}", item.Taken) VNĐ
					</th>
					<th>
						@String.Format("{0:0,0}", item.Remain) VNĐ
					</th>
					<td>	
						
						
					</td>
				</tr>
			}
		</tbody>
	</table>
@section Scripts{
    <script type="text/javascript" charset="utf-8" src="~/AreasContent/dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
